<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginBottom="28dp"

        android:background="@drawable/radius_dashboard"
        android:elevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageMain"
            android:layout_width="165dp"
            android:layout_height="159dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="26dp"
            android:src="@drawable/foto_laundry" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="211dp"
            android:layout_marginBottom="104dp"
            android:fontFamily="@font/roboto_regular"
            android:text="ID:"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/idMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="200dp"
            android:layout_marginBottom="104dp"
            android:fontFamily="@font/roboto_regular"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/outletMain"
            android:layout_width="212dp"
            android:layout_height="wrap_content"


            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="80dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Mafia Pentol"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/nomorMain"
            android:layout_width="145dp"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="61dp"
            android:fontFamily="@font/roboto_regular"
            android:text="081230662475"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/jalanMain"
            android:layout_width="218dp"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="23dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Jalan Mundu"
            android:textColor="@color/blue_font"
            android:textSize="20dp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>