<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="237dp"
                android:background="@color/aestetic_blue">

                <TextView
                    android:id="@+id/welcome"
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"

                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="59dp"

                    android:layout_marginBottom="131dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="Welcome"
                    android:textColor="@color/white"
                    android:textSize="24dp" />

                <ImageView
                    android:id="@+id/buttonCloseMain"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"

                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="30dp"

                    android:layout_marginBottom="179dp"
                    android:src="@drawable/cancel_24px" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="142dp"
                    android:src="@drawable/bunderanpic" />

                <TextView
                    android:id="@+id/tUsernameMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="60dp"

                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="100dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Waezqorney Huanfareyzo"
                    android:textColor="@color/white"
                    android:textSize="22dp">

                </TextView>

            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="372dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Category"
                    android:textColor="@color/black"
                    android:textSize="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.051"
                    app:layout_constraintStart_toStartOf="parent" />

                <RelativeLayout
                    android:layout_width="346dp"
                    android:layout_height="126dp"
                    android:layout_marginBottom="424dp"
                    android:background="@drawable/radius_dashboard"
                    android:elevation="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.492"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/whatsappLayout"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/profile_background"
                                android:elevation="5dp"
                                android:gravity="center_horizontal">

                                <ImageView
                                    android:id="@+id/btnWhatsappMain"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="3dp"
                                    android:clickable="true"
                                    android:padding="2dp"
                                    android:src="@drawable/ic_baseline_phone_24" />


                            </RelativeLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="WhatsApp"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/setrikaLayout"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/profile_background"
                                android:elevation="5dp"
                                android:gravity="center_horizontal">

                                <ImageView
                                    android:id="@+id/btnMapMain"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="3dp"
                                    android:clickable="true"
                                    android:padding="2dp"
                                    android:src="@drawable/ic_baseline_location_on_24_dashboard" />


                            </RelativeLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="Map"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/profile_background"
                                android:elevation="5dp"
                                android:gravity="center_horizontal">

                                <ImageView
                                    android:id="@+id/btnHistoryMain"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="5dp"
                                    android:clickable="true"
                                    android:padding="2dp"
                                    android:src="@drawable/ic_baseline_access_time_24" />


                            </RelativeLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="History"

                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/profile_background"
                                android:elevation="5dp"
                                android:gravity="center_horizontal">

                                <ImageView
                                    android:id="@+id/btnSettingMain"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginBottom="6dp"
                                    android:clickable="true"
                                    android:padding="2dp"
                                    android:src="@drawable/ic_baseline_settings_24" />


                            </RelativeLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="Setting"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:clipToPadding="false"
                    android:foregroundGravity="bottom"
                    android:overScrollMode="never"
                    app:layout_constraintBottom_toBottomOf="parent">

                </androidx.viewpager.widget.ViewPager>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>